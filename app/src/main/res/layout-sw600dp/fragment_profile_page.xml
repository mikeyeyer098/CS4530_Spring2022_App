<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage"
    android:background="#0C343D">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            >

            <ImageButton
                android:id="@+id/backArrow"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="#b4a7d6"
                android:fontFamily="@font/comfortaa_bold"
                android:paddingHorizontal="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Healthy Health"
                android:textAlignment="center"
                android:textColor="#434343"
                android:textSize="35sp"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Your Profile:"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ListView
            android:id="@+id/moduleListProfile"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:text="Name:"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/nameTextField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:padding="8dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:text="Height:"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"/>

                <Spinner
                    android:id="@+id/heightSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edit_text" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:layout_marginStart="15dp"
                    android:text="Weight:"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/weightTextField"
                    android:layout_width="match_parent"
                    android:layout_weight=".33"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:text="Age:"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"/>
                <Spinner
                    android:id="@+id/ageSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edit_text"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:text="Gender:"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"/>


                <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edit_text" />


            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:text="City:"
                    android:textAlignment="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
                <EditText
                    android:id="@+id/cityTextField"
                    android:background="@drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="Country:"
                    android:textAlignment="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text"
                    app:ccp_showFullName="true"
                    app:ccp_showPhoneCode="false"
                    app:ccp_showNameCode="false"
                    app:ccp_contentColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/editProfileButton"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@drawable/green_background"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="10dp"
                    android:text="edit data"
                    android:textColor="#434343"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/updateProfileButton"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@drawable/green_background"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="10dp"
                    android:text="update data"
                    android:textColor="#434343"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ProfilePicImageView"
                    android:layout_width="200dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/profile_pic_button"/>
                <Button
                    android:id="@+id/TakePictureButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@drawable/green_background"
                    android:text="take new profile pic"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="#434343"
                    android:layout_gravity="center"
                    android:textSize="35dp" />
            </LinearLayout>
        </LinearLayout>
</FrameLayout>
