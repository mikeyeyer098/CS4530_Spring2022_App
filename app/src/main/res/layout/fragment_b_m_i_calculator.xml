<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C343D"
    tools:context=".BMI_calculator">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="70dp"
        >

        <ImageButton
            android:id="@+id/backArrow"
            android:layout_height="40dp"
            android:layout_width="65dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5dp"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/back_arrow"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingHorizontal="10dp"
            android:background="#b4a7d6"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Healthy Health"
            android:textColor="#434343"
            android:textAlignment="center"
            android:textSize="22sp"
            tools:ignore="TextContrastCheck" />

        <ImageButton
            android:id="@+id/ProfilePicThumbnail"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_pic" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0C343D"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:text="BMI Calculator"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:text="Input height and weight to calculate your bmi"
            android:textColor="#d9d9d9"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:padding="5sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:text="Height:"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:padding="5sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:text="Weight:"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">


            <Spinner
                android:id="@+id/heightSpinner"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text" />

            <EditText
                android:id="@+id/weightTextField"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="40dp"
                android:background="@drawable/edit_text"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/comfortaa_bold"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:text="Your BMI:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center"
                />
        <EditText
            android:id="@+id/BMIText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaa_bold"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/edit_text"
            android:textSize="20sp"
            />
        </LinearLayout>
        <Button
            android:id="@+id/CalculateBMIButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@drawable/green_background"
            android:text="Calculate BMI"
            android:fontFamily="@font/comfortaa_bold"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:textColor="#434343"
            android:textAlignment="center"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>
</FrameLayout>